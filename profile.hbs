<div class="row">

    <div class="col-md-8 col-md-offset-2 animated bounceInLeft">
        <h1 class="text-center">User Profile</h1>
        <hr>
        <h2 class="text-center">My Orders</h2>
        <hr>
        {{# each orders}}
        <ul class="list-group">
            {{# each this.items}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{this.item.title}} | {{this.qty}} Units 
                <span class="badge badge-primary badge-pill">{{this.price}}</span>
            </li>
        {{/ each}}
        </ul>
        
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <strong class="label text-capitalize table-bordered table-info">Total:  {{this.cart.totalPrice}} SEK</strong>
                
            </div>
            <hr>
        </div>
        <br>
        {{/ each}}
    </div>
</div>



