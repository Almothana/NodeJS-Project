{{# if products}}
<div class="row container-login100-form-btn">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each products}}
            <div>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class=" align-items-center" style="width: 10rem;">
                        <img src="{{ this.item.imagePath }}" class="img-responsive card-img-bottom mr-2"
                            style="width: 80px; height: 80px" alt="...">
                    </div>
                    <br>
                    <div >
                        <strong class="align-items-center">{{this.item.title}}. </strong>
                        <br>
                        <br>
                        <div class="btn-group">
                        </div>
                        <a type="button" class="btn btn-outline-secondary btn-sm" href="/reduce/{{this.item._id}}"><i
                                class="fas fa-minus"></i></a>
                                {{!-- _id this id fom mongoDB --}}
                        <a type="button" class="btn btn-outline-secondary btn-sm" href="/add/{{this.item._id}}"><i
                                class="fas fa-plus"></i></a>

                        <a type="button" class="btn btn-outline-secondary btn-sm" href="/remove/{{this.item._id}}"><i
                                class="fas fa-trash-alt"></i></a>
                    </div>
                    <span class="label text-capitalize table-bordered table-success"> {{this.price}} SEK</span>
                    <span class="badge badge-pill badge-dark">{{this.qty}}</span>
                </li>
            </div>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong class="label text-capitalize table-bordered table-success">Total: {{totalPrice}} SEK</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No items in cart... <a href="/"> Add new items to Shopping</a></h2>
    </div>
</div>
{{/if}}