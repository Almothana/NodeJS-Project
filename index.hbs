<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
        {{successMsg}}
        </div>
    </div>
</div>


{{!-- create loop All products --}}

{{# each products}}
<div class="">
<div class="row container-login100-form-btn">
    {{# each this}}
    <div class="card" style="width: 18rem;">
        <img src="{{ this.imagePath }}" class="img-responsive" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{ this.title }}</h5>
            <p class="card-text desc">{{ this.description }}</p>

            <div class="clearfix">
                <div class="price float-left">{{ this.price }} SEK</div>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right" role="button">Add to Cart</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{/each}}